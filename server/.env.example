# Port on which the backend server will run
PORT=5000

# MongoDB connection string (local or cloud, e.g. MongoDB Atlas)
# Example: mongodb+srv://user:password@cluster.mongodb.net/dbname
MONGODB_URI=

# Secret key used to sign and verify JWT tokens
# Use a long, random string in production
JWT_SECRET=

# Redis connection URL (used for queues, caching, BullMQ, etc.)
# Example: redis://default:password@host:port
REDIS_URI=

# Frontend application URL (used for CORS, redirects, etc.)
# Example: http://localhost:3000 or https://your-frontend.vercel.app
FRONTEND_URL=
